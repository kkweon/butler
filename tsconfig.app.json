{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": ["chrome"]
  },
  "files": ["src/main.ts", "src/main.options.ts", "src/polyfills.ts"],
  "include": ["src/**/*.d.ts", "src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts", "src/test.ts"],
  "angularCompilerOptions": {
    "strictTemplate": true
  }
}
